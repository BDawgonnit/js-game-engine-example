{
	"root": true,
	"extends": "eslint:recommended",
	"env": {
		"browser": true,
		"es6": true
  },
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
  "rules": {
		"eqeqeq": "error",
		"no-var": "error",
		"semi": [
			"error",
			"never"
		],
		"brace-style": [ "warn",
			"1tbs", {
				"allowSingleLine": true
			}
		],
		"valid-jsdoc": [
			"warn",
			{
				"requireReturn": false,
				"prefer": {
					"arg": "param",
					"argument": "param",
					"class": "constructor",
					"return": "returns",
					"virtual": "abstract"
				},
				"preferType": {
					"Boolean": "boolean",
					"Number": "number",
					"object": "Object",
					"String": "string"
				}
			}
		],
		"no-warning-comments": "warn",
		"no-else-return": "warn",
		"no-alert": "warn",
		"no-trailing-spaces": [
			"warn",
			{ "skipBlankLines": true }
		],
		"indent": [
			"warn",
     	"tab",
			{ "SwitchCase": 1 }
		],
		"quotes": [
			"warn",
			"single"
		]
	}
}
